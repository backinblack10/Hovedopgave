<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.backinblack.espressohovedopgave.MainActivity">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/cv"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            >

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/image"
                android:background="@drawable/imagestherubzlogo"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/newarrivalscardview"
        android:layout_below="@+id/cv"
        android:onClick="toAccessorices">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            >

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/image1"
                android:background="@drawable/nano2pack"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true" />

            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:id="@+id/newarrivals"
                android:text="Nano 2-Pack"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_toEndOf="@+id/image1"
                android:textColor="#0b0707" />



        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/classiccardview"
        android:layout_below="@id/newarrivalscardview"
        android:onClick="tonewarrivals">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            >

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/image2"
                android:background="@drawable/therubzcirclegreen"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/classic"
                android:text="Circle"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_toEndOf="@+id/image2"
                android:textColor="#0b0707" />



        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/crystalcardview"
        android:onClick="tocrystal"
        android:layout_below="@+id/classiccardview">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            >

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/image3"
                android:background="@drawable/crystal"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/crystal"
                android:text="Crystal"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_toEndOf="@+id/image3"
                android:textColor="#0b0707" />



        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent" android:id="@+id/pixellayout"
        android:layout_height="75dp" android:layout_below="@id/crystalcardview"
        android:onClick="toclassic">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            >

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/image4"
                android:background="@drawable/classic"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/pixel"
                android:text="Classic"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_toEndOf="@+id/image4"
                android:textColor="#0b0707" />



        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@+id/pixellayout"
        android:id="@+id/pixelcardview"
        android:onClick="topixel">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:padding="16dp">
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" android:background="@drawable/pixel"
        android:id="@+id/image5"
        android:layout_alignParentBottom="true"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/test"
            android:text="Pixel"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_toEndOf="@+id/image5"
            android:textColor="#0b0707"
            />

    </RelativeLayout>

    </android.support.v7.widget.CardView>


    <com.facebook.share.widget.LikeView
        android:id="@+id/likeView"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/fb_share_button" />



        <com.facebook.share.widget.ShareButton
            android:id="@+id/fb_share_button"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/textView" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView"
        android:layout_above="@+id/cv"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>

