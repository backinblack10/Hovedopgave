<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:id="@+id/img_android"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/textView5"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tv_android"
        android:layout_alignEnd="@+id/img_android"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_below="@+id/img_android"
        android:textColor="#120303" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView5"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="137dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tv_androidpris"
        android:layout_below="@+id/tv_android"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="KR"
        android:id="@+id/textView6"
        android:layout_toRightOf="@+id/tv_androidpris"
        android:layout_alignBottom="@+id/tv_androidpris"
        android:layout_toEndOf="@+id/tv_androidpris"
        android:layout_marginStart="40dp" />

</RelativeLayout>